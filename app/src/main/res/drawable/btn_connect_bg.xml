<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <corners
                android:bottomLeftRadius="0dp"
                android:radius="4dp"
                android:topLeftRadius="0dp" />
            <solid android:color="#FFF12F" />
            <size
                android:width="90dp"
                android:height="40dp" />
        </shape>
    </item>

    <item
        android:bottom="4dp"
        android:left="0dp"
        android:right="4dp"
        android:top="4dp">
        <selector xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <corners
                        android:bottomLeftRadius="0dp"
                        android:radius="4dp"
                        android:topLeftRadius="0dp" />
                    <solid android:color="#4fe659" />
                    <size
                        android:width="82dp"
                        android:height="22dp" />
                </shape>
            </item>

            <item>
                <shape android:shape="rectangle">
                    <corners
                        android:bottomLeftRadius="0dp"
                        android:radius="4dp"
                        android:topLeftRadius="0dp" />
                    <solid android:color="@color/colorPrimary" />
                    <size
                        android:width="82dp"
                        android:height="22dp" />
                </shape>
            </item>

        </selector>
    </item>

</layer-list>